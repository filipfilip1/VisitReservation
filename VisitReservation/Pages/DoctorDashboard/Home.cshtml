@page
@model VisitReservation.Pages.DoctorDashboard.HomeModel
@{
    ViewData["Title"] = "Dashboard Doktora";
}

<h2>Dashboard Doktora</h2>

@if (Model.PastVisits != null && Model.PastVisits.Any())
{
    <h3>Historia Wizyt</h3>
    <ul>
        @foreach (var visit in Model.PastVisits)
        {
            <li>@visit.Date: @visit.PatientName - @visit.Description</li>
        }
    </ul>
}
else
{
    <p>Brak przeszłych wizyt.</p>
}

@if (Model.UpcomingVisits != null && Model.UpcomingVisits.Any())
{
    <h3>Nadchodzące Wizyty</h3>
    <ul>
        @foreach (var visit in Model.UpcomingVisits)
        {
            <li>@visit.Date: @visit.PatientName - @visit.Description</li>
        }
    </ul>
}
else
{
    <p>Brak nadchodzących wizyt.</p>
}

@if (Model.Reviews != null && Model.Reviews.Any())
{
    <h3>Opinie Pacjentów</h3>
    <ul>
        @foreach (var review in Model.Reviews)
        {
            <li>@review.PatientName: @review.Text</li>
        }
    </ul>
}
else
{
    <p>Brak opinii.</p>
}

