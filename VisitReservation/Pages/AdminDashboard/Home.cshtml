@page
@model VisitReservation.Pages.AdminDashboard.HomeModel
@{
}

<h2>Dashboard Admina</h2>

<h3>Użytkownicy do Zatwierdzenia</h3>
@if (Model.UsersToApprove != null && Model.UsersToApprove.Any())
{
    @foreach (var user in Model.UsersToApprove)
    {
        <div>
            <span>@user.UserName</span>
            <form method="post">
                <input type="hidden" name="userId" value="@user.Id" />
                <button type="submit" asp-page-handler="Approve">Zatwierdź jako SuperUser</button>
            </form>
        </div>

    }
}
else
{
    <p>Brak użytkowników do zatwierdzenia</p>
}


